---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdSlot from '../components/AdSlot.astro';
import data from '../data/tools.json';

const title = "AI Tools Directory â€” Curated tools, guides, and comparisons";
const description = "Discover AI tools for productivity, developers, design, marketing, video, and research. Fast, SEO-ready directory with practical guides.";
const canonical = "https://aitoolsdirectory.allkvd.me/";
const topCats = data.categories.slice(0,4);
const latestTools = data.tools.slice(0,8);
---
<BaseLayout title={title} description={description} canonical={canonical}>
  <section class="hero">
    <h1>Find the right AI tool, fast.</h1>
    <p>{description}</p>
    <div class="search">
      <input id="q" placeholder="Search tools (e.g., code, SEO, video)..." />
      <button onclick="window.location.href='/search?q=' + encodeURIComponent(document.getElementById('q').value)">Search</button>
    </div>
    <div class="kicker">Tip: Start with long-tail guides for quicker rankings.</div>
  </section>

  <AdSlot slot="HOME_TOP" />

  <section class="grid" aria-label="Top categories">
    {topCats.map((c) => (
      <a class="card" href={`/category/${c.slug}`} key={c.slug}>
        <h3>{c.name}</h3>
        <p>{c.desc}</p>
        <div class="badges"><span class="badge">Browse tools</span><span class="badge">Guides</span></div>
      </a>
    ))}
  </section>

  <section style="margin-top:22px">
    <h2 style="margin:0 0 8px">Recently added</h2>
    <table class="table" role="table">
      <thead>
        <tr><th>Tool</th><th>Category</th><th>Pricing</th><th>What it does</th></tr>
      </thead>
      <tbody>
        {latestTools.map((t) => (
          <tr key={t.slug}>
            <td><a href={`/tool/${t.slug}`}>{t.name}</a></td>
            <td><a href={`/category/${t.category}`}>{data.categories.find(c=>c.slug===t.category)?.name}</a></td>
            <td>{t.pricing}</td>
            <td>{t.tagline}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>

  <AdSlot slot="HOME_MID" />

  <section style="margin-top:24px">
    <h2 style="margin:0 0 8px">Start here</h2>
    <div class="grid">
      <a class="card" href="/guides/best-ai-tools-for-students">
        <h3>Best AI tools for students</h3>
        <p>High-intent guide: writing, research, presentations, and study workflows.</p>
      </a>
      <a class="card" href="/guides/best-ai-tools-for-developers">
        <h3>Best AI tools for developers</h3>
        <p>Code assistants, debugging, docs, and productivity boosters.</p>
      </a>
    </div>
  </section>
</BaseLayout>
